<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:padding="5dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
        <RelativeLayout
                android:id="@+id/foot_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/foot_index_img"
                      android:gravity="center"
                      android:paddingTop="8dp"
                      android:drawablePadding="8dip"
                      android:drawableTop="@drawable/icon01_31"
                      android:text="代收快递"
                      android:textColor="@color/profile_font_color"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>
        <!-- 第二 -->
        <RelativeLayout
                android:id="@+id/foot_paopao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >
                <TextView android:layout_width="wrap_content"
                          android:id="@+id/foot_paoao_img"
                          android:layout_gravity="center"
                          android:drawableTop="@drawable/icon01_26"
                          android:text="寄出快递"
                          android:paddingTop="8dp"
                          android:drawablePadding="8dip"
                          android:textColor="@color/profile_font_color"
                          android:layout_height="wrap_content"/>

        </RelativeLayout>
        <!-- 第3 -->
        <RelativeLayout
                android:id="@+id/foot_find"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/foot_find_img"
                      android:gravity="center"
                      android:paddingTop="8dp"
                      android:drawablePadding="8dip"
                      android:drawableTop="@drawable/icon1_32"
                      android:text="查询"
                      android:textColor="@color/profile_font_color"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>

        <!-- 最右 -->

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/foot_mine">

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/foot_mine_img"
                      android:gravity="center"
                      android:drawableTop="@drawable/icon1_35"
                      android:text="全部快递"
                      android:paddingTop="8dp"
                      android:drawablePadding="8dip"
                      android:textColor="@color/profile_font_color"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>